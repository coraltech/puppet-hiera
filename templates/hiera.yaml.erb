---
:hierarchy:
<% hierarchy.each do |level| -%>
    - <%= level %>
<% end %>
:backends:
<% backends.each do |backend| -%>
<% if backend['type'] != 'puppet' -%>
    - <%= backend['type'] %>
<% end -%>
<% end %>
<% backends.each do |backend| -%>
<% if backend['type'] != 'puppet' -%>
:<%= backend['type'] -%>:
<% if backend['datasource'] -%>
    :datasource: '<%= backend['datasource'] -%>'
<% else -%>
    :datadir: '<%= backend['datadir'] -%>'
<% end %>
<% end -%>
<% end -%>